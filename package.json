{
  "name": "mernauth",
  "version": "1.0.0",
  "private": true,
  "main": "app.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "startserver": "nodemon app.js",
    "startclient": "npm start --prefix client",
    "install": "cd client && npm install",
    "start:prod": "node app.js",
    "start:dev": "concurrently \"npm run startserver\" \"npm run startclient\"",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "concurrently": "^5.2.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "if-env": "^1.0.4",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.16",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "author": "Alan Margolies, Austin Atkinson, John Sasser, Rami Forde",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amargolies88/mernAuth.git"
  }
}
